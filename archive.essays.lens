<!DOCTYPE html>
  <head>
    <koken:meta />
    <koken:title />
    <koken:settings />
    <koken:asset file="js/webfonts.js" />
  </head>
  <body>
    <header>
      <h1>{{ site.title }}</h1>
      <nav>
       <koken:navigation />
      </nav>
    </header>
    <koken:load>
      <koken:breadcrumbs />
      <koken:loop>
        <h2>
          <koken:link>
            {{ essay.title }}
          </koken:link>
        </h2>
        {{ essay.content }}
      </koken:loop>
    <koken:else>
      <koken:note>
        No published essays found
      </koken:note>
    </koken:load>
    <footer>
        {{ site.copyright }}
      </footer>
  </body>
</html>